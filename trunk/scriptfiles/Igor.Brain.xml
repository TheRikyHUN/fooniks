<smartNPC>
	<npc>
		<name>Igor</name>
		<skin>120</skin>
	</npc>

	<moods>
		<mood value="0">Suicidal</mood>
		<mood value="1">Bad</mood>
		<mood value="2">Normal</mood>
		<mood value="3">Good</mood>
		<mood value="4">Great</mood>
	</moods>

	<triggergroup name="hey">
		<word>hey</word>
		<word>hi</word>
		<word>hello</word>
		<word>houdie</word>
	</triggergroup>

	<triggergroup name="insult">
		<word>fuck(and)off</word>
		<word>fuck(and)you</word>
		<word>screw(and)you</word>
		<word>fag</word>
	</triggergroup>
	
	<moodMod group="hey">1</moodMod>
	<moodMod group="insult">-1</moodMod>	

	<sentence>
		<mood>0</mood>
		<group>hey</group>
		<text>Leave me alone!</text>
	</sentence>	
	
	<sentence>
		<mood>1</mood>
		<group>hey</group>
		<text>Go away!</text>
	</sentence>
	
	<sentence>
		<mood>2</mood>
		<group>hey</group>
		<text>You know that youre talking to a dead guy, right?</text>
	</sentence>
	
	<sentence>
		<mood>3</mood>
		<group>hey</group>
		<text>My life has no meaning.</text>
	</sentence>
	
	<sentence>
		<mood>4</mood>
		<group>hey</group>
		<text>Don't talk to me.</text>
	</sentence>
	
	<automessages>
		<automessage mood="0">I'm already dead...</automessage>
		<automessage mood="1">Whats the point?</automessage>
		<automessage mood="2">My life is a trek.</automessage>
		<automessage mood="3">Were just spiraling down a monsoon.</automessage>
		<automessage mood="4">All the flowers are black to me.</automessage>
	</automessages>
	
</smartNPC>